  <!-- This will display User's input in their budgets and expenses -->
    {{#if record.length}}
    <section>
      <h3>History</h3>
        <ol>
          {{#each records as |record|}}
          <ul>
            <div class="record-name">
              <a href="/record/{{id}}">{{title}}</a>
            </div>
            <button type="button" class="delete-record-btn">🗑️</button>
          </ul>
            {{/each}}
        </ol>
    </section>
    {{/if}}
