<!-- Summary overview of Budget and Expense of User's Input -->
<section>
  <div class="container text-center">
    <h2>Current Balance</h2>
    <div id="budget-balance">$0.00</div>
    <div class="main-date" id="date-display"></div>
        
    <!-- Budget -->
    <div class="row justify-content-center">
      <div class="col-4">
        <div>
          <h4>Budget</h4>
          <p id="money-plus" class="money plus">+$0.00</p>
        </div>
      </div>

      <!-- Expense -->
      <div class="col-4">
        <div>
          <h4>Expense</h4>
          <p id="money-minus" class="money minus">-$0.00</p>
        </div>
      </div>
    </div>
  </div>
</section>

  <!-- Place for User to input their Budgets -->
<section>
  <h3>Budget</h3>
  <form id="form">
    <div class="container text-center">
      <div class="row">
        <div class="col-4">
          <label for="month" class="form-sections">Month:</label>
          <div class="category-input">
            <select id="category-expense" class="form-control" id="datemonth" autocomplete="off">
              <option value="Select">--- Month ---</option>
              <option value="January">January</option>
              <option value="February">February</option>
              <option value="March">March</option>
              <option value="April">April</option>
              <option value="May">May</option>
              <option value="June">June</option>
              <option value="July">July</option>
              <option value="August">August</option>
              <option value="September">September</option>
              <option value="October">October</option>
              <option value="November">November</option>
              <option value="December">December</option>
            </select>
          </div>
        </div>

        <div class="col-4">
          <label for="amount" class="form-sections">Amount:</label>
          <div class="amt-input">
            <input type="text" class="form-control" id="amount-input"/>
          </div>
          </div>
      </div>
    </div>
    <button type="button" class="btn btn-outline-secondary addbudgetBtn">Add Budget</button>
  </form>
</section>

{{!-- Place for User to input a custom Category field --}}
<section>
  <h3>Category</h3>
      <form id="category-form">
        <div class="container text-center">
          <div class="row">

              <div class="col">
              <label for="catName" class="form-sections">Category Name:</label>
              <input type="text" class="form-control" id="catName" required>
            </div>
              
            <div class="col">
              <label for="catBudget" class="form-sections">Budget Amounts:</label>
                <input type="text" class="form-control" id="catBudget" required>
            </div>
          </div>
        </div>
        <br>
        <button id="createCategory" type="submit" class="btn btn-outline-secondary addexpenseBtn">Add Category</button>
      </form>
    </div>
</section>

<!-- Place for User to input their Expenses throughout the month (add a record) -->
<section>
  <h3>Expense</h3>
      <form id="form">
        <div class="container text-center">
          <div class="row">

            <div class="col">
              <label for="type" class="form-sections">Category:</label>
              <select id="type" class="form-control" autocomplete="off" required>
                {{#each categoryData}}
                <option value="{{this.category_name}}">{{this.category_name}}</option>
                {{/each}}
                {{!-- <option value="Select">--- Select ----</option>
                <option value="Food">Food</option>
                <option value="Rent">Rent</option>
                <option value="Utilities">Utilities</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Transportation">Transportation</option>
                <option value="Other">Other</option> --}}
              </select>
            </div>

              <div class="col">
              <label for="merchant" class="form-sections">Merchant:</label>
                <input type="text" class="form-control" id="merchant"/>
            </div>
        
            <div class="col">              
              <div class="date-picker">
                <label for="date" class="form-sections">Date: </label>
                <input type="date" min="1" class="form-control" id="date" autocomplete="off">
              </div>
            </div>
              
            <div class="col">
              <label for="amount" class="form-sections">Amount:</label>
                <input type="text" class="form-control" id="amount"/>
            </div>
          </div>
        </div>
        <br>
        <button id="createRecord" type="button" class="btn btn-outline-secondary addexpenseBtn">Add Expense</button>
      </form>
    </div>
</section>

{{!-- Show all users records --}}
<section>
  <ul id='records'>
  {{#each recordData}}
  <li>{{this.type}} {{this.amount}} {{this.merchant}} {{this.date}}</li>  
  {{/each}}
  </ul>
</section>

